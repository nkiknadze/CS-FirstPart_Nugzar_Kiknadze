@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-5">
    <h1>Roles</h1>

    <div class="mb-3">
        <a asp-action="CreateRole" class="btn btn-primary">Create New Role</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>