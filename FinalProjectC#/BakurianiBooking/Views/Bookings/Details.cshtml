@model BakurianiBooking.Models.DTOs.BookingDetailsDto

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Hotel Id</dt>
        <dd class="col-sm-10">@Model.HotelId</dd>
        <dt class="col-sm-2">Room Id</dt>
        <dd class="col-sm-10">@Model.RoomId</dd>
        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.IdentityUserId</dd>
        <dt class="col-sm-2">Mobile</dt>
        <dd class="col-sm-10">@Model.Mobile</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>