@using System.Security.Claims
@model BakurianiBooking.Models.DTOs.BookingCreateDto

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdentityUserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

            <div class="form-group">
                <label class="control-label">Hotel Name</label>
                <input value="@ViewBag.HotelName" class="form-control" readonly />
                <input type="hidden" asp-for="HotelId" value="@ViewBag.HotelId" />
            </div>

            <div class="form-group">
                <label class="control-label">Room Name</label>
                <input value="@ViewBag.RoomName" class="form-control" readonly />
                <input type="hidden" asp-for="RoomId" value="@ViewBag.RoomId" />
            </div>

            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" min="@ViewBag.Today" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" min="@ViewBag.StartDate"  />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" value="@ViewBag.RoomPrice" readonly />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">User Email</label>
                <input value="@ViewBag.UserEmail" class="form-control" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}